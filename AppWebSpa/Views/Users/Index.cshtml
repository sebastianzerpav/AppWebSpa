@model IEnumerable<AppWebSpa.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create">Crear nuevo usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Fecha de nacimiento</th>
            <th>Email</th>
            <th>Contraseña</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (User item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdUser">Editar</a> |
                <a class="btn btn-success" asp-action="UserDetails" asp-route-id="@item.IdUser">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdUser">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
